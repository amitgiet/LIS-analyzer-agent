{
  "server": {
    "url": "http://localhost:3000",
    "_comment": "Update this URL to your backend server address",
    "endpoints": {
      "reports": "/api/instruments/results",
      "heartbeat": "/api/instruments/heartbeat"
    },
    "timeout": 30000
  },
  "instrument": {
    "id": "CLIENT_001",
    "_comment": "This ID must match the instrument_id in your backend database",
    "type": "ESR_ANALYZER",
    "location": "Client Lab"
  },
  "connection": {
    "type": "tcp",
    "_comment": "Protocol handler enabled by default for proper ASTM ENQ/ACK/NAK handling",
    "useProtocolHandler": true,
    "alarmTime": 10000,
    "serial": {
      "port": "COM3",
      "baudRate": 9600,
      "dataBits": 8,
      "parity": "none",
      "stopBits": 1,
      "useProtocolHandler": true,
      "alarmTime": 10000
    },
    "tcp": {
      "host": "localhost",
      "port": 4000,
      "useProtocolHandler": true,
      "alarmTime": 10000
    }
  },
  "retry": {
    "maxRetries": 5,
    "delayMs": 5000,
    "exponentialBackoff": true
  },
  "queue": {
    "enabled": true,
    "file": "./data/queue.json",
    "maxSize": 1000
  },
  "logging": {
    "level": "info",
    "file": "./logs/agent.log",
    "maxSize": "10m",
    "maxFiles": 5
  },
  "security": {
    "apiKey": null,
    "verifySsl": true
  },
  "heartbeat": {
    "enabled": true,
    "intervalMs": 60000
  },
  "autodetect": {
    "_comment": "AutoDetection configuration for parallel scanning",
    "serialBaudRates": [9600, 19200, 38400],
    "serialListenMs": 15000,
    "tcpTimeoutMs": 5000,
    "maxConcurrent": 5,
    "adaptiveListen": true,
    "tcpTargets": []
  }
}

